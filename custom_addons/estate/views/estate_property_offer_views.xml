<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_list_view" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
          <list editable="bottom" decoration-danger="property_id.state == 'refused'" decoration-success="property_id.state == 'accepted'">
            <field name="price" string="Price"/>
            <field name="partner_id" string="Partner"/>
            <field name="status" string="Status"/>
            <field name="validity" string="Validity"/>
            <field name="date_deadline" string="Date deadline"/>
            <field name="property_type_id"/>
          </list>
        </field>
    </record>

    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
          <form>
              <header>
                <button name="action_accept" string="Accept" type="object" class="btn-primary" invisible="property_id.state != 'new'"/>
                <button name="action_refuse" string="Refuse" type="object" class="btn-secondary" invisible="property_id.state != 'new'"/>
              </header>
              <sheet>
                <group>
                  <field name="price" string="Price"/>
                  <field name="partner_id" string="Partner"/>
                  <field name="status" string="Status"/>
                  <field name="validity" string="Validity"/>
                  <field name="date_deadline" string="Date deadline"/>
                </group>
              </sheet>
          </form>
        </field>
    </record>
    <record id="estate_property_offer_action" model="ir.actions.act_window">
    <field name="name">Offers</field>
    <field name="res_model">estate.property.offer</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[('property_type_id', '=', active_id)]</field>
  </record>

</odoo>